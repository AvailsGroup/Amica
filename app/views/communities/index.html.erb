<%= stylesheet_link_tag 'communities', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="container">
  <div class="d-flex align-items-center p-3 my-3 text-dark bg-blue rounded shadow-sm">
    <div class="lh-1">
      <nav class="navbar">
        <%= form_with url: profile_search_path,:method => 'get',class: "container-fluid" do |f| %>
          <p class="me-3">コミュニティを検索</p>
          <div class="input-group">
            <%= f.text_field :name, class: "form-control",placeholder: "コミュニティ名、タグ、id等...",aria: {label:"Username",describedby: "basic-addon1"}%>
          </div>
          <%=link_to "コミュニティ新規作成",new_community_path,class:"btn btn-primary mt-3"%>
        <% end %>


      </nav>
    </div>
  </div>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4  g-lg-4">
    <% @community.each do |community| %>
      <%= link_to community_path(community.id), style: "text-decoration: none" do %>
        <div class="col">
          <div class="card">
            <% if community.icon? %>
              <%= image_tag "/communities_image/#{community.icon}",class: "img-fluid" %><br>
            <% else %>
              <%= image_tag "default_icon", class: "img-fluid" %><br>
            <% end %>
            <div class="carddy">
              <h5 class="card-title"><%= community.name %></h5>
              <p class="card-text"><%= community.content .truncate(15, omission: '...')%></p>
            </div>
            <div class="card">
              <ul class="list-group list-group-flush">
                <% community.tag_list.shuffle.first(3).each do |t| %>
                  <li class="list-group-item">#<%= t %></li>
                <% end %>
                <% tag_count =  community.tag_list.count%>
                <% while tag_count < 3 do%>
                  <li class="list-group-item">－</li>
                  <% tag_count += 1 %>
                <% end %>
              </ul>
            </div>
            <div class="card-footer">
              <small class="text-muted">Created by <%= @user.find(community.user_id).nickname %></small>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>