<%= stylesheet_link_tag 'communities', media: 'all', 'data-turbolinks-track': 'reload' %>
<style>
    .flash{
        display: none;
    }
</style>

<div class="nav-scroller bg-white shadow-sm">
  <nav class="nav nav-underline" aria-label="Secondary navigation">
    <%= link_to "最新", communities_path,class: "nav-link"%>
    <%= link_to "おすすめ", community_pickup_path,class: "nav-link",'aria-current': "page", remote: true %>
    <%= link_to community_joined_path,class: "nav-link",'aria-current': "page", remote: true do%>
      参加中
      <span class="badge bg-light text-dark rounded-pill align-text-bottom"><%= current_user.community_member.count %></span>
    <% end %>
  </nav>
</div>

<p class="notice"><%= notice %></p>
<p class="notice"><%= alert %></p>

<div class="container">
  <div class="p-3 my-3 text-dark bg-blue rounded shadow-sm">
    <div class="lh-1">
      <%= form_with url: profile_search_path,:method => 'get',class: "container-fluid" do |f| %>
        <div class="input-group">
          <div class="d-flex flex-column w-100">
            <div class="p-2 bd-highlight">
              <%= f.text_field :name, class: "form-control w-100",placeholder: "コミュニティを検索",aria: {label:"Username",describedby: "basic-addon1"}%>
            </div>
            <div class="p-2 bd-highlight text-center">
              <p>or</p>
              <%=link_to "コミュニティ新規作成",new_community_path,class:"btn btn-primary"%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2
              row-cols-lg-2  row-cols-xl-3 row-cols-xxl-4
              g-4　g-lg-4　p-3　my-3" id="community">

     <% @community.each do |community| %>
      <div id="communities">
        <%= render "communities/community",community:community %>
      </div>
    <% end %>
  </div>
</div>