<% if value.comment.post.user.id == visited.id %>
  <%= link_to timeline_path(value.comment.post.id), class: "text-decoration-none" do %>
    <%= "あなたの投稿" %>
  <% end %>
<% else %>
  <%= link_to timeline_path(value.comment.post.id), class: "text-decoration-none" do %>
    <%= "#{visited.name}さんの投稿" %>
  <% end %>
<% end %>
<span style="color:lightseagreen">にコメントしました</span>
<div class="p-3 my-3 text-dark bg-blue rounded shadow-sm" style="margin-left: 40px">
  <span><%= value.comment.post.content[0..25] %><%= "..." if value.comment.post.content.length > 25 %></span>
</div>