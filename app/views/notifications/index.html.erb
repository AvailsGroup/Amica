<style>
    .flash {
        display: none;
    }
</style>

<%= render "notifications/nav", notification: @notification_count, information: @info_show_count, whisper: @whispers, page: @page %>

<div class="container">
  <% if @content.exists? %>
    <%= render partial: @path, collection: @pagenate, as: :value, locals: { new_value: @new_content } %>
    <%= render "layouts/paginate", pagenate: @pagenate %>
  <% else %>
    <p class="text-center my-4">通知はありません</p>
  <% end %>
</div>