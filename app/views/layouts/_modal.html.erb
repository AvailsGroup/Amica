<%# 必要な引数
id: モーダルのID,
title: タイトル,content: コンテンツ,
negative: いいえの文字,
affirmmative_path: はいのパス, affirmmative_method: はいのメソッド, affirmative: はいの文字 %>
<div class="modal fade" id="<%= id %>" tabindex="-1" aria-labelledby="<%= id %>Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="<%= id %>Label"><%= title %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= content %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= negative %></button>
        <%= button_to affirmmative_path, method: affirmmative_method, class: "btn btn-primary", data: { disable_with: '送信中...' } do %>
          <%= affirmative %>
        <% end %>
      </div>
    </div>
  </div>
</div>