<!DOCTYPE html>
  <html lang = "ja">
    <head>
      <title>Amica</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>

      <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
      <link rel="preconnect" href="https://fonts.googleapis.com">
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <link href="https://fonts.googleapis.com/css2?family=Kiwi+Maru&display=swap" rel="stylesheet">
    </head>

  <body>
    <header>
      <nav>
        <% if user_signed_in? %>

          <div class="container">
          <div class="icons">
            <%= image_tag("default_icon.png",class:"default_icon") %>
            <i class="fab fa-fort-awesome"></i>
            <i class="fab fa-searchengin"></i>
            <i class="fas fa-comments"></i>
            <i class="fas fa-users"></i>
            <i class="fas fa-clock"></i>
            <i class="fas fa-address-card"></i>
          </div>

          <div class="links">
            <strong><%= link_to current_user.userid, pages_show_path,class: "link"%></strong>
            <%= link_to 'プロフィール変更', edit_user_registration_path,class: "link" %>
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete,class: "link" %>
        <% else %>
          <%= link_to 'サインアップ', new_user_registration_path,class: "link" %>
          <%= link_to 'ログイン', new_user_session_path,class: "link" %>
        <% end %>
          </div>
        </div>
      </nav>
    </header>
    <!-- ここに追加 -->
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>


    <%= yield %>
  </body>
</html>