

<h1>Mypages#index</h1>


<h2>名前</h2>
<%= @user.name %><br>
<h2>email</h2>
<%= @user.email %><br>
<h2>ニックネーム</h2>
<%= @user.nickname %><br>
<h2>id</h2>
<%= @user.id %><br>


<p>現在のアイコン</p>
<% if @user.image? %>
  <%= image_tag "/user_images/#{@user.image}"%>
  user
<% else %>
  default
  <%= image_tag "default_icon" %>
<% end %>



<%= form_tag("mypages/update", {multipart: true}) do %>
  <p>画像</p>
  <input type="file" name="image" >
  <input type="password" name="password" required>
  <input type="submit" name="submit" value="保存">
 <% end %>



