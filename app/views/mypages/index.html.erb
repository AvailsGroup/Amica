
<%= stylesheet_link_tag 'mypages', media: 'all', 'data-turbolinks-track': 'reload' %>

<script>
    function previewImage(obj)
    {
        var fileReader = new FileReader();
        fileReader.onload = (function() {
            document.getElementById('preview').src = fileReader.result;
        });
        fileReader.readAsDataURL(obj.files[0]);
        document.getElementById("image_text").innerHTML = "選択した画像";
    }
</script>



<div class="body">
<h1>アイコン変更</h1>

  <span>現在のアイコン</span>

  <div class="uploader">
  <div class="form1">
    <%= form_tag("mypages/update", {multipart: true}) do %>
  <label>
    <input type="file" name="image" class="image_select"  accept='image/*' onchange="previewImage(this);"  required >
<% if @user.image? %>
  <%= image_tag "/user_images/#{@user.image}",class: "user_icon"%>
<% else %>
  <%= image_tag "default_icon" , class: "user_icon" %>
<% end %>
   </label><br>
      <p id="image_text">画像を選択してください</p>
      <p>
        <img id="preview" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" style="max-width:200px;">
      </p>

    <input type="submit" name="submit" value="保存" class="btn btn--orange">

 <% end %>
  </div>
</div>


</div>