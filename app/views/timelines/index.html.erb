<div class="border border-5 rounded" style="margin: 50px">

  <div class="timeline mx-auto" >
  <ul class="header-menus">
      <%= form_for(@create ,url:timelines_path) do |f|%>
        <div class="form-group">
          <%= f.text_area :content, placeholder:"どしたん？",class: "form-control" %>
        </div>
        <%= f.submit "投稿"%>
      <% end %>
  </ul>
<div class="activity" >
  <% @posts.each do |post| %>
  <%= post.content %><br>
    </div>
<% end %>

